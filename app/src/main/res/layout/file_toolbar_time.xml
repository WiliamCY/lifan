<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentRelativeLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#FFFFFF"
    android:layout_height="50dp">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp" />
    <com.zhy.android.percent.support.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/toolbar_back"
            app:layout_marginPercent="3%"
            android:layout_gravity="bottom"
            android:background="@mipmap/ic_back_black"
            android:layout_width="20dp"
            android:layout_height="20dp" />
        <TextView

            android:textColor="#0A0A0A"
            android:id="@+id/toolbar_title"
            app:layout_marginTopPercent="25%"
            app:layout_marginLeftPercent="45%"
            app:layout_marginPercent="2%"
            android:text="消息"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/my_time_cancel"
            app:layout_marginRightPercent="3%"
            android:layout_alignParentRight="true"
            android:visibility="gone"
            app:layout_marginTopPercent="30%"
            android:textColor="#0A0A0A"
            android:textSize="17sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="取消"/>
        <ImageView
            android:id="@+id/btn_editor"
           android:layout_alignParentRight="true"
            app:layout_marginPercent="3%"
            android:background="@mipmap/my_time_delete"
            android:layout_width="25dp"
            android:layout_height="25dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />




    </com.zhy.android.percent.support.PercentRelativeLayout>
</com.zhy.android.percent.support.PercentRelativeLayout>