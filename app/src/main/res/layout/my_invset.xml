<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    app:cardCornerRadius="10dp">

    <com.zhy.android.percent.support.PercentLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
          <ImageView
              app:layout_marginPercent="2%"
              android:layout_gravity="center"
              android:id="@+id/my_invest_background"
              android:layout_width="80dp"
              android:layout_height="50dp"
             />
        <TextView
            app:layout_marginPercent="1%"
            app:layout_marginLeftPercent="7%"
            android:id="@+id/my_invest_h1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="投标金额（元）"/>
        <TextView
            app:layout_marginPercent="1%"
            app:layout_marginLeftPercent="12%"
            android:textColor="#0A0A0A"
            android:id="@+id/my_invest_e1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="500000.00"/>

        <TextView app:layout_marginPercent="1%"

            app:layout_marginLeftPercent="7%"
            android:id="@+id/my_invest_h2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="返利金额（元）"/>

        <TextView
            app:layout_marginPercent="1%"
            app:layout_marginLeftPercent="12%"
            android:textColor="#EEC900"
            android:id="@+id/my_invest_e2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="500.00"/>

        <TextView
            app:layout_marginPercent="2%"
            android:layout_gravity="right"
            android:layout_alignParentRight="true"
            android:id="@+id/my_invest_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2018.3.12"/>
    </com.zhy.android.percent.support.PercentLinearLayout>

</android.support.v7.widget.CardView>