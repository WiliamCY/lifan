<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <include
        app:layout_heightPercent="13w"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/file_mian_call"
        layout="@layout/file_toolbar"/>

    <View
        android:id="@+id/my_view1"
        android:layout_height="0.1dp"
        android:layout_width="fill_parent"
        android:background="#D3D3D3"/>

    <TextView
        app:layout_marginTopPercent="5%"
        app:layout_marginLeftPercent="5%"
        app:layout_marginRightPercent="5%"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="400电话："/>
    <LinearLayout
        app:layout_marginTopPercent="1%"
        app:layout_marginLeftPercent="5%"
        app:layout_marginRightPercent="5%"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_weight="8"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="#0A0A0A"/>

        <ImageView
            android:id="@+id/file_mian_call_1"
            android:gravity="right"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@mipmap/file_call_phone"/>
    </LinearLayout>

    <TextView
        app:layout_marginTopPercent="1%"
        app:layout_marginLeftPercent="5%"
        app:layout_marginRightPercent="5%"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="公司电话："/>
    <LinearLayout
        app:layout_marginLeftPercent="5%"
        app:layout_marginRightPercent="5%"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/company_tel"
            android:layout_weight="8"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:textColor="#0A0A0A"/>

        <ImageView
            android:id="@+id/file_mian_call_2"
            android:gravity="right"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@mipmap/file_call_phone"/>
    </LinearLayout>

    <TextView
        app:layout_marginTopPercent="1%"
        app:layout_marginLeftPercent="5%"
        app:layout_marginRightPercent="5%"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="公司电话："/>
    <LinearLayout
        app:layout_marginLeftPercent="5%"
        app:layout_marginRightPercent="5%"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:textColor="#0A0A0A"/>

    </LinearLayout>


    <TextView
        app:layout_marginTopPercent="1%"
        app:layout_marginLeftPercent="5%"
        app:layout_marginRightPercent="5%"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="qq群："/>
    <LinearLayout
        app:layout_marginLeftPercent="5%"
        app:layout_marginRightPercent="5%"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/company_com"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#0A0A0A"/>
    </LinearLayout>

    <TextView
        app:layout_marginTopPercent="1%"
        app:layout_marginLeftPercent="5%"
        app:layout_marginRightPercent="5%"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="服务邮箱："/>
    <LinearLayout
        app:layout_marginLeftPercent="5%"
        app:layout_marginRightPercent="5%"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:textColor="#0A0A0A"/>

    </LinearLayout>

    <TextView
        app:layout_marginTopPercent="1%"
        app:layout_marginLeftPercent="5%"
        app:layout_marginRightPercent="5%"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="客服QQ："/>
    <LinearLayout
        app:layout_marginLeftPercent="5%"
        app:layout_marginRightPercent="5%"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#0A0A0A"/>

    </LinearLayout>

    <TextView
        app:layout_marginTopPercent="1%"
        app:layout_marginLeftPercent="5%"
        app:layout_marginRightPercent="5%"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="地址："/>
    <LinearLayout
        app:layout_marginLeftPercent="5%"
        app:layout_marginRightPercent="5%"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:textColor="#0A0A0A"/>

    </LinearLayout>
</com.zhy.android.percent.support.PercentLinearLayout>