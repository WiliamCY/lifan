<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/forget_back"
        app:layout_marginPercent="3%"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_heightPercent="7%w"
        app:layout_widthPercent="7%w"
        android:background="@mipmap/ic_back_black"/>

    <com.zhy.android.percent.support.PercentLinearLayout
        app:layout_marginTopPercent="25%"
        android:gravity="center"
        app:layout_marginLeftPercent="17%"
        app:layout_marginRightPercent="15%"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView

            android:gravity="center"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@mipmap/forget_phones"/>
        <EditText
            android:inputType="phone"
            android:singleLine="true"
            android:id="@+id/forget_userPhone"
            android:textSize="18sp"
            android:paddingLeft="10dp"
            android:layout_weight="10"
            android:layout_width="0dp"
            android:textColorHint="#D3D3D3"
            android:background="@null"
            android:layout_height="wrap_content"
            android:hint="请输入你的手机号"/>
    </com.zhy.android.percent.support.PercentLinearLayout>
    <View
        app:layout_marginLeftPercent="27%"
        app:layout_marginRightPercent="15%"
        android:layout_height="0.1dp"
        android:layout_width="fill_parent"
        android:background="#D3D3D3"/>

    <com.zhy.android.percent.support.PercentLinearLayout
        app:layout_marginTopPercent="3%"
        android:gravity="center"
        app:layout_marginLeftPercent="17%"
        app:layout_marginRightPercent="15%"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView

            android:gravity="center"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@mipmap/forget_yzms"/>
        <EditText
            android:inputType="number"
            android:id="@+id/forget_userYZM"
            android:paddingStart="15dp"
            android:textSize="18sp"
            android:paddingLeft="10dp"
            android:layout_weight="10"
            android:singleLine="true"
            android:layout_width="0dp"
            android:textColorHint="#D3D3D3"
            android:background="@null"
            android:layout_height="wrap_content"
            android:hint="请输入验证码"/>
        <View
            android:layout_width="1dip"
            android:layout_height="23dp"
            android:background="#D3D3D3"
            android:layout_gravity="center_horizontal"
            />
        <TextView
            android:textSize="18sp"
            android:id="@+id/forget_usersendYZM"
            android:gravity="center"
            android:textColor="#D3D3D3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:text="发送"/>
    </com.zhy.android.percent.support.PercentLinearLayout>
    <View
        app:layout_marginLeftPercent="27%"
        app:layout_marginRightPercent="15%"
        android:layout_height="0.1dp"
        android:layout_width="fill_parent"
        android:background="#D3D3D3"/>
    <com.zhy.android.percent.support.PercentLinearLayout
        app:layout_marginTopPercent="3%"
        android:gravity="center"
        app:layout_marginLeftPercent="17%"
        app:layout_marginRightPercent="15%"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:gravity="center"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@mipmap/forget_pwds"/>
        <EditText
            android:id="@+id/forget_userPwd"
            android:textSize="18sp"
            android:paddingLeft="10dp"
            android:layout_weight="10"
            android:singleLine="true"
            android:inputType="textPassword"
            android:layout_width="0dp"
            android:textColorHint="#D3D3D3"
            android:background="@null"
            android:layout_height="wrap_content"
            android:hint="请输入密码"/>
    </com.zhy.android.percent.support.PercentLinearLayout>
    <View
        app:layout_marginLeftPercent="27%"
        app:layout_marginRightPercent="15%"
        android:layout_height="0.1dp"
        android:layout_width="fill_parent"
        android:background="#D3D3D3"/>
    <com.zhy.android.percent.support.PercentLinearLayout
        app:layout_marginTopPercent="3%"
        android:gravity="center"
        app:layout_marginLeftPercent="17%"
        app:layout_marginRightPercent="15%"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:gravity="center"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@mipmap/forget_pwds"/>
        <EditText
            android:inputType="textPassword"
            android:id="@+id/forget_userPwdS"
            android:textSize="18sp"
            android:paddingLeft="10dp"
            android:layout_weight="10"
            android:layout_width="0dp"
            android:textColorHint="#D3D3D3"
            android:background="@null"
            android:singleLine="true"
            android:layout_height="wrap_content"
            android:hint="请再次输入密码"/>
    </com.zhy.android.percent.support.PercentLinearLayout>
    <View
        app:layout_marginLeftPercent="27%"
        app:layout_marginRightPercent="15%"
        android:layout_height="0.1dp"
        android:layout_width="fill_parent"
        android:background="#D3D3D3"/>

    <Button
        android:id="@+id/forget_forget"
        android:textColor="#FFA54F"
        app:layout_marginTopPercent="3%"
        app:layout_marginLeftPercent="15%"
        app:layout_marginRightPercent="15%"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@mipmap/forget_button"
        app:layout_heightPercent="15%w" />

</com.zhy.android.percent.support.PercentLinearLayout>