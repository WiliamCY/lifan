<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/login_background">
    <ImageView
        android:id="@+id/register_back"
        app:layout_marginTopPercent="1%"
        app:layout_marginLeftPercent="5%"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_heightPercent="7%w"
        app:layout_widthPercent="7%w"
        android:background="@mipmap/ic_back_white"/>

    <ImageView
        android:id="@+id/register_logo"
        app:layout_marginLeftPercent="38%"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_heightPercent="30%w"
        app:layout_widthPercent="30%w"
        android:background="@mipmap/login_logo"/>

    <com.zhy.android.percent.support.PercentLinearLayout
        app:layout_marginTopPercent="10%"
        android:gravity="center"
        app:layout_marginLeftPercent="13%"
        app:layout_marginRightPercent="15%"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView

            android:gravity="center"
            android:layout_width="30dp"
            android:layout_height="30dp"

            android:background="@mipmap/login_usernames"/>
        <EditText
            android:textColor="#ffffff"
            android:singleLine="true"
            android:id="@+id/register_userName"
            android:textSize="18sp"
            android:paddingLeft="10dp"
            android:layout_weight="10"
            android:layout_width="0dp"
            android:textColorHint="#ffffff"
            android:background="@null"
            android:layout_height="wrap_content"
            android:hint="用户名"/>
    </com.zhy.android.percent.support.PercentLinearLayout>

    <View
        app:layout_marginLeftPercent="24%"
        app:layout_marginRightPercent="15%"
        android:layout_height="0.1dp"
        android:layout_width="fill_parent"
        android:background="#ffffff"/>

    <com.zhy.android.percent.support.PercentLinearLayout
        app:layout_marginTopPercent="4%"
        android:gravity="center"
        app:layout_marginLeftPercent="13%"
        app:layout_marginRightPercent="15%"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView

            android:gravity="center"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@mipmap/register_phones"/>
        <EditText
            android:textColor="#ffffff"
            android:singleLine="true"
            android:id="@+id/register_userPhone"
            android:textSize="18sp"
            android:paddingLeft="10dp"
            android:layout_weight="10"
            android:layout_width="0dp"
            android:textColorHint="#ffffff"
            android:background="@null"
            android:inputType="phone"
            android:layout_height="wrap_content"
            android:hint="请输入你的手机号"/>
    </com.zhy.android.percent.support.PercentLinearLayout>

    <View
        app:layout_marginLeftPercent="24%"
        app:layout_marginRightPercent="15%"
        android:layout_height="0.1dp"
        android:layout_width="fill_parent"
        android:background="#ffffff"/>

    <com.zhy.android.percent.support.PercentLinearLayout
        app:layout_marginTopPercent="4%"
        android:gravity="center"
        app:layout_marginLeftPercent="13%"
        app:layout_marginRightPercent="15%"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView

            android:gravity="center"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@mipmap/login_pwds"/>
        <EditText
            android:textColor="#ffffff"
            android:singleLine="true"
            android:id="@+id/register_userPwd"
            android:textSize="18sp"
            android:paddingLeft="10dp"
            android:layout_weight="10"
            android:layout_width="0dp"
            android:textColorHint="#ffffff"
            android:background="@null"
            android:inputType="textPassword"
            android:layout_height="wrap_content"
            android:hint="请输入密码"/>
    </com.zhy.android.percent.support.PercentLinearLayout>

    <View
        app:layout_marginLeftPercent="24%"
        app:layout_marginRightPercent="15%"
        android:layout_height="0.1dp"
        android:layout_width="fill_parent"
        android:background="#ffffff"/>
    <com.zhy.android.percent.support.PercentLinearLayout
        app:layout_marginTopPercent="4%"
        android:gravity="center"
        app:layout_marginLeftPercent="13%"
        app:layout_marginRightPercent="15%"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView

            android:gravity="center"
            android:layout_width="30dp"
            android:layout_height="30dp"

            android:background="@mipmap/register_yzms"/>
        <EditText
            android:textColor="#ffffff"
            android:id="@+id/register_userYZM"
            android:textColorHint="#ffffff"
            android:paddingStart="15dp"
            android:textSize="18sp"
            android:paddingLeft="10dp"
            android:layout_weight="10"
            android:layout_width="0dp"
            android:inputType="number"
            android:singleLine="true"
            android:background="@null"
            android:layout_height="wrap_content"
            android:hint="请输入验证码"/>
        <View
            android:layout_width="1dip"
            android:layout_height="30dp"
            android:background="#ffffff"
            android:layout_gravity="center_horizontal"
            />
        <TextView
            android:id="@+id/register_userSendYZM"
            android:gravity="center"
            android:textColor="#ffffff"
            android:layout_width="0dp"
            android:textSize="18sp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:text="发送"/>
    </com.zhy.android.percent.support.PercentLinearLayout>

    <View
        app:layout_marginLeftPercent="24%"
        app:layout_marginRightPercent="15%"
        android:layout_height="0.1dp"
        android:layout_width="fill_parent"
        android:background="#ffffff"/>
    <com.zhy.android.percent.support.PercentLinearLayout
        app:layout_marginTopPercent="4%"
        android:gravity="center"
        app:layout_marginLeftPercent="13%"
        app:layout_marginRightPercent="15%"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView

            android:gravity="center"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@mipmap/register_tjrs"/>
        <EditText
            android:textColor="#ffffff"
            android:id="@+id/register_userYQM"
            android:textSize="18sp"
            android:paddingLeft="10dp"
            android:layout_weight="10"
            android:layout_width="0dp"
            android:singleLine="true"
            android:textColorHint="#ffffff"
            android:background="@null"
            android:layout_height="wrap_content"
            android:hint="推荐人邀请码（可不填）"/>
    </com.zhy.android.percent.support.PercentLinearLayout>

    <View
        app:layout_marginLeftPercent="24%"
        app:layout_marginRightPercent="15%"
        android:layout_height="0.1dp"
        android:layout_width="fill_parent"
        android:background="#ffffff"/>

    <Button
        android:id="@+id/register_register"
        android:textColor="#FFA54F"
        app:layout_marginTopPercent="3%"
        app:layout_marginLeftPercent="15%"
        app:layout_marginRightPercent="15%"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@mipmap/register_button"
        app:layout_heightPercent="13%w" />

</com.zhy.android.percent.support.PercentLinearLayout>