<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F0F0"
    android:orientation="vertical"
    >
    <com.zhy.android.percent.support.PercentLinearLayout
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
<ImageView
    android:id="@+id/setting_back"
    app:layout_marginPercent="2%"
    android:layout_width="25dp"
    android:layout_height="25dp"
    android:background="@mipmap/ic_back_black"/>

        <TextView
            android:textColor="#0A0A0A"
            android:textStyle="bold"
            app:layout_marginLeftPercent="35%"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="设置"/>
    </com.zhy.android.percent.support.PercentLinearLayout>

    <com.zhy.android.percent.support.PercentRelativeLayout
        android:id="@+id/setting_fixpwd"
        app:layout_marginTopPercent="2%"
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_heightPercent="12%w"
        android:orientation="horizontal">


        <TextView
            app:layout_marginTopPercent="25%"
            app:layout_marginPercent="2%"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="修改密码"/>

        <ImageView

            android:layout_alignParentRight="true"
            android:layout_gravity=""
            app:layout_marginPercent="3%"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:background="@mipmap/ic_my_setting_back"/>
    </com.zhy.android.percent.support.PercentRelativeLayout>


    <com.zhy.android.percent.support.PercentRelativeLayout
        android:id="@+id/cleanMessage"
        app:layout_marginTopPercent="3%"
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_heightPercent="12%w"
        android:orientation="horizontal">


        <TextView
            app:layout_marginTopPercent="25%"
            app:layout_marginPercent="2%"
            android:textSize="15sp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="清除本地缓存"/>

      <TextView
          android:id="@+id/messageSize"
          app:layout_marginPercent="3%"
          android:layout_alignParentRight="true"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
  />
    </com.zhy.android.percent.support.PercentRelativeLayout>
    <View
        app:layout_marginLeftPercent="3%"
        app:layout_marginRightPercent="3%"
        android:layout_height="0.1dp"
        android:layout_width="match_parent"
        android:background="#C2C2C2"/>
    <com.zhy.android.percent.support.PercentRelativeLayout
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_heightPercent="12%w"
        android:orientation="horizontal">


        <TextView
            app:layout_marginTopPercent="25%"
            app:layout_marginPercent="2%"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="关于版本"/>

        <TextView
            app:layout_marginPercent="3%"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1.0"/>
    </com.zhy.android.percent.support.PercentRelativeLayout>

<TextView
    android:id="@+id/my_setting_quit"
    android:textColor="#FF7F24"
    android:textSize="20sp"
    android:textStyle="bold"
    android:gravity="center"
    android:text="退出登录"
    app:layout_marginTopPercent="5%"
    android:background="#ffffff"
    app:layout_heightPercent="15%w"
    android:layout_width="match_parent"
    android:layout_height="0dp" />

</com.zhy.android.percent.support.PercentLinearLayout>